set nocompatible
filetype indent on
filetype on
filetype plugin on
filetype plugin indent on
syntax on
set ai
set si
set ts=4
set sw=4
set softtabstop=4
set autoread
set expandtab
set hidden
set infercase
set lazyredraw
set novisualbell
set shiftround
set showcmd
set showmatch
set smartcase
set smarttab
set title
set wildmenu
set backspace=indent,eol,start
set selectmode=mouse
set mouse=a
colorscheme default

let mapleader = "\<Space>"
nnoremap <Leader>w :w<CR>
